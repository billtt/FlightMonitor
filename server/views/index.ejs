<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Flight Monitor</title>
    <meta name="author" content="billtt">

    <meta property="og:title" content="Flight Monitor">
    <meta property="og:type" content="website">

    <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />

    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <style type="text/css">
        html {
            height: 100%;
        }

        body {
            height: 100%;
            margin: 0;
            paddng: 0;
        }

        .container {
            max-width: 360px;
            /*opacity: 0.7;*/
        }

        .card-body {
            min-height: 200px;
        }

        .subscript {
            font-size: 40%;
            color: gray;
        }

        .metric {
            font-size: 80%;
            color: #343a40;
        }

        .title {
            margin-top: 15px;
            font-weight: bold;
            background-color: #f0f0f0;
            padding: 5px 0px;
        }

        #map {
            height: 100%;
        }

        #status {
            position: absolute;
            z-index: 1;
            left: 0px;
            top: 10px;
        }
    </style>

    <script src="js/jquery-3.6.0.min.js"></script>
    <script src="js/moment.js"></script>

</head>

<body>

<div id="map"></div>

<div class="container" id="status">

    <main>
        <div class="row row-cols-1 row-cols-md-1 mb-3 text-center">
            <div class="col">
                <div class="card mb-4 rounded-3 shadow-sm">
                    <div class="card-header py-3">
                        <h4 class="my-0 fw-normal">Flight Status</h4>
                        <span id="valUpdateTime">-</span>
                    </div>
                    <div class="card-body">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 0%" id="pgbPercent">
                            </div>
                        </div>
                        <p style="margin-top: 10px;">
                            <b>
                                <span id="valCompletedDist">0.0</span> /
                                <span id="valTotalDist">0.0</span> <span class="subscript">nm</span>
                            </b>
                            <span class="metric">
                                (<span id="valCompletedDistKm">0.0</span> /
                                <span id="valTotalDistKm">0.0</span> <span class="subscript">km</span>)
                            </span>
                        </p>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li class="title">Destination</li>
                            <li style="font-size: 1.2em;">
                                <b><span id="valDistance">0.0</span> <span class="subscript">nm</span></b>
                                <span class="metric">
                                    (<span id="valDistanceKm">0.0</span> <span class="subscript">km</span>)
                                </span>
                            </li>
                            <li><span id="valETA">01/01 00:00</span> (<span id="valETE">0m</span>)</li>
                            <li class="title">Altitude</li>
                            <li style="font-size: 1.2em;">
                                <b><span id="valAltitude">0.0</span> <span class="subscript">ft</span></b>
                                <span class="metric">(<span id="valAltitudeM">0.0</span> <span class="subscript">m</span>)</span>
                            </li>
                            <li class="title">Speed</li>
                            <li style="font-size: 1.2em;">
                                <b><span id="valGS">0.0</span> <span class="subscript">Knots</span></b>
                                <span class="metric">
                                    (<span id="valGSKm">0.0</span> <span class="subscript">km/h</span>)
                                </span>
                            </li>
                            <li>
                                <span class="badge bg-secondary">TAS</span>
                                <span id="valTAS">0.0</span> <span class="subscript">Knots</span>
                            </li>
                            <li class="title">Fuel</li>
                            <li>
                                <span id="valFuel">0.0</span> kg <br/>
                                <span id="valFuelRate">0.0</span> kg/h
                                (<span id="valFuelTime">0.0</span>h)
                            </li>
                            <li class="title">Descent Ref</li>
                            <li>
                                <span id="valDesAngle">0.0</span>Â°<br/>
                                <span id="valDesVelocity">0.0</span> ft/min
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </main>

</div>
</body>

<script src="js/FlightMonitor.js"></script>
<script type="text/javascript" src="//api.map.baidu.com/api?v=3.0&ak=<%=ak%>&callback=initMap"></script>

</html>